<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.administrator.myapplication.MainActivity">

    <TextView android:id="@+id/txt_show1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello new View1111111!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button android:id="@+id/btn_click1" android:layout_height="wrap_content" android:text="我是新的点我哦" android:layout_width="wrap_content"></Button>
    <Button
            android:text="拨打电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_call"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_showCall"/>
    <Button
            android:text="拨号页面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_showCall"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_click1"/>
    <Button
            android:text="拨号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_show" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_call"/>

</android.support.constraint.ConstraintLayout>
